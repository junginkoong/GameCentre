<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/badassBlue"
    tools:context="com.example.prathamdesai13.gamecentre.StartingActivity">

    <TextView
        android:id="@+id/GameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="43dp"
        android:layout_marginTop="34dp"
        android:gravity="center"
        android:text="@string/sign_up"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/badassGreen"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/SignUpUsernameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/GameText"
        android:layout_marginStart="6dp"
        android:layout_marginTop="67dp"
        android:text="@string/username" />

    <EditText
        android:id="@+id/SignUpUsernameInput"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/GameText"
        android:layout_marginStart="73dp"
        android:layout_marginTop="51dp" />

    <EditText
        android:id="@+id/SignUpPasswordInput"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/GameText"
        android:layout_marginStart="-75dp"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="347dp"
        android:layout_toEndOf="@+id/GameText" />

    <TextView
        android:id="@+id/SignUpPasswordText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/GameText"
        android:layout_marginStart="6dp"
        android:layout_marginTop="110dp"
        android:text="@string/password" />

    <Button
        android:id="@+id/SignUpButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/SignUpPasswordText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="98dp"
        android:text="@string/sign_up" />



</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/badassBlue"
    tools:context="com.example.prathamdesai13.gamecentre.StartingActivity">

    <TextView
        android:id="@+id/GameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="43dp"
        android:layout_marginTop="34dp"
        android:gravity="center"
        android:text="@string/login"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/badassGreen"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/LoginUsernameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/GameText"
        android:layout_marginStart="6dp"
        android:layout_marginTop="67dp"
        android:text="@string/username" />

    <EditText
        android:id="@+id/LoginUsernameInput"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/GameText"
        android:layout_alignLeft="@id/LoginUsernameText"
        android:layout_marginStart="73dp"
        android:layout_marginLeft="76dp"
        android:layout_marginTop="51dp"
        android:inputType="text" />

    <TextView
        android:id="@+id/LoginPasswordText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/GameText"
        android:layout_marginStart="6dp"
        android:layout_marginTop="110dp"
        android:text="@string/password" />

    <EditText
        android:id="@+id/LoginPasswordInput"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/GameText"
        android:layout_marginStart="-47dp"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="347dp"
        android:layout_toEndOf="@+id/GameText"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/LoginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LoginPasswordText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="98dp"
        android:text="@string/login" />


</RelativeLayout>